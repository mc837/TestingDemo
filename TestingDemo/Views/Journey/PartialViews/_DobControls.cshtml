<fieldset id="dobQuestion" data-bind="koValidationDob: {}">

    <div class="form-group">
        <label for="day" class="col-sm-2 control-label text-left">Date of birth: </label>
        <div class="col-xs-2">
            <select id="day" class="dobDaySelect form-control" name="dobDay" data-bind="options: $root.availableDays, value: dobDay, optionsText: 'display', optionsValue: 'value'"></select>
        </div>

        <div class="col-xs-2">
            <select id="month" class="dobMonthSelect form-control" name="dobMonth" data-bind="options: $root.availableMonths, value: dobMonth, optionsText: 'display', optionsValue: 'value'"></select>
        </div>

        <div class="col-xs-2">
            <select id="year" class="dobYearSelect form-control" name="dobYear" data-bind="options: $root.availableYears, value: dobYear, optionsText: 'display', optionsValue: 'value'"></select>
        </div>

        <span class="tick-area"></span>
    </div>

    <div class="error alert alert-danger" data-bind="text : error, visible: showDobErrorMessage"></div>
    <input type="hidden" id="date-of-birth" name="dateOfBirth" data-bind="attr : {value: dateOfBirth}" />
    <input type="hidden" id="age" name="age" data-bind="attr : {value: age()}"/>

</fieldset>
